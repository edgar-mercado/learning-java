package ecme.test;

import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Test√ß {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        String base2=Integer.toString(n, 2);
        System.out.println(base2);
        int count=0;
        int maxCount=0;
        boolean found=false;
        for (int i=0; i<base2.length()-1; i++){
            System.out.println("Comparing:"+base2.charAt(i)+"=="+base2.charAt(i+1));
                if (base2.charAt(i)==base2.charAt(i+1) && base2.charAt(i)=='1'){
                    if (found)
                        ++count;                        
                    else
                        count=1;
                    found=true;
                } else {
                    found = false;
                     if (count>maxCount){
                      maxCount=count;
                      count=0;
                    }
                }
        }
        System.out.println(maxCount);
    }
    
    
}